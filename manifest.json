{
    "manifest_version": 3,
    "name": "AutoConnect: Automate your connection requests, expand your network.",
    "version": "1.0",
    "description": "Automates actions on LinkedIn and Twitter",
    "permissions": [
      "activeTab",
      "storage",
      "scripting"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": [
          "*://*.linkedin.com/search/results/people/*",
          "*://*.linkedin.com/search/results/all/*",
          "*://*.linkedin.com/mynetwork/*",
          "*://*.x.com/i/connect_people/*",
          "*://*.twitter.com/i/connect_people/*"
        ],
        "js": ["content.js"],
        "css": []
      }
    ],
    "web_accessible_resources": [{
      "resources": ["linkedin.js", "twitter.js"],
      "matches": ["*://*.linkedin.com/*", "*://*.x.com/*", "*://*.twitter.com/*"]
    }],
    "action": {
      "default_popup": "popup.html",
      "default_icon": "logo.png"
    },
    "host_permissions": [
      "*://*.linkedin.com/search/results/people/*",
      "*://*.linkedin.com/search/results/all/*",
      "*://*.linkedin.com/mynetwork/*",
      "*://*.x.com/i/connect_people/*",
      "*://*.twitter.com/i/connect_people/*"
    ],
    "icons": {
        "48": "logo.png"
    }
}